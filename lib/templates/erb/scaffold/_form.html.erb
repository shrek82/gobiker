<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title">
								<span class="icon">
									<i class="icon-align-justify"></i>
								</span>
          <h5>Text inputs</h5>
        </div>
        <div class="widget-content nopadding">
          <%%= form_for(@<%= singular_table_name %>,:url=>admin_<%= singular_table_name %>_path,:html=>{:class=>"form-horizontal"}) do |f| %>
          <%% if @<%= singular_table_name %>.errors.any? %>
          <div id="error_explanation">
            <h2><%%= pluralize(@<%= singular_table_name %>.errors.count, "error") %> prohibited
              this <%= singular_table_name %>
              from being saved:</h2>

            <ul>
              <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
              <li><%%= msg %></li>
              <%% end %>
            </ul>
          </div>
          <%% end %>

          <% attributes.each do |attribute| -%>

              <div class="control-group">
                <label class="control-label"><%%= f.label :<%= attribute.name %> %></label>

                <div class="controls">
                  <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
                </div>
              </div>
          <% end -%>

          <div class="form-actions">
            <%%= f.submit :class=>"btn btn-primary" %>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
          <%% end %>
        </div>
      </div>
    </div>
  </div>
</div>