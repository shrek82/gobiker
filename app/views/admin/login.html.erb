<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>管理员登陆22</title>
  <link href="/static/core-admin/stylesheets/application.css" media="screen" rel="stylesheet" type="text/css"/>
  <link rel="stylesheet" href="/static/core-admin/stylesheets/font-awesome.css"/>
  <link rel="stylesheet" href="/css/common/bootstrap.css"/>
  <link rel="stylesheet" href="/css/common/todc-bootstrap.css"/>

  <script type="text/javascript" src="/js/jQuery-1.9.1.js"></script>
  <script type="text/javascript" src="/js/jquery.form.js"></script>
  <script type="text/javascript" src="/js/candy.js"></script>
  <script type="text/javascript" src="/static/artDialog5/source/jquery.artDialog.js"></script>

</head>

<body>

<div class="navbar navbar-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="brand" href="#">网站管理中心22</a>
      <!-- the new toggle buttons -->
      <ul class="nav pull-right">
        <li class="toggle-primary-sidebar hidden-desktop" data-toggle="collapse" data-target=".nav-collapse-primary">
          <button type="button" class="btn btn-navbar"><i class="icon-th-list"></i></button>
        </li>
        <li class="hidden-desktop" data-toggle="collapse" data-target=".nav-collapse-top">
          <button type="button" class="btn btn-navbar"><i class="icon-align-justify"></i></button>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="container">

  <div class="span5 offset3">


    <div class="padded">
      <div class="login box" style="margin-top: 80px;">

        <div class="box-header">
          <span class="title">管理登录</span>
        </div>

        <div class="box-content padded">
          <form class="separate-sections" id="form1" method="post" action="/admin/login/">

            <%= block_alert %>

            <div class="input-prepend">
              <input type="text" name="name" placeholder="username">
            </div>

            <div class="input-prepend">
              <input type="password" name="password" placeholder="password">
            </div>

            <div>
              <span style="vertical-align: middle;line-height: 25px"><input type="checkbox" name="remember" value="1"></span><span style="vertical-align: middle;color: #333;font-size: 12px">记住我</span>
            </div>
            <div>
              <button class="btn btn-blue btn-block" id="submit_button">
                登录<%= request.method %> <i class="icon-signin"></i>
              </button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#form1').bind("submit",function (e) {
            e.preventDefault();
            new ajaxForm($(this),{
                successLabel:'登录成功',
                dataType:'json'
            }).send();
        });
    });
</script>
</body>
</html>