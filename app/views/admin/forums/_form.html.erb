<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title">
								<span class="icon">
									<i class="icon-align-justify"></i>
								</span>
          <h5>Text inputs</h5>
        </div>
        <div class="widget-content nopadding">
          <%= form_for(@forum, :url => admin_forums_path, :html => {:class => "form-horizontal"}) do |f| %>


              <% if @forum.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@forum.errors.count, "error") %> prohibited
                      this bb
                      from being saved:</h2>

                    <ul>
                      <% @forum.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>


              <div class="control-group">
                <label class="control-label"><%= f.label :name %></label>

                <div class="controls">
                  <%= f.text_field :name %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label"><%= f.label :order_num %></label>

                <div class="controls">
                  <%= f.number_field :order_num %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label"><%= f.label :unit_count %></label>

                <div class="controls">
                  <%= f.number_field :unit_count %>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label"><%= f.label :club_id %></label>

                <div class="controls">
                  <%= f.number_field :club_id %>
                </div>
              </div>

              <div class="form-actions">
                <%= f.submit :class => "btn btn-primary" %>
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>