<% @comments=[@comment] if @comment %>
<% @comments.each do |c|%>
    <li>
      <div class="avatar">
        <a target="_blank" href="http://weibo.com/chichiyao" title="zhaojiangang_"><img src="http://gravatar.duoshuo.com/avatar/40d6b032bb83a7915337aaf0f5fccd72?s=50" alt="zhaojiangang_"></a>
      </div>
      <div class="cmt-body">
        <div class="cmt-header"><a href="http://weibo.com/chichiyao" rel="nofollow" target="_blank" data-user-id="560858"><%= c.user.username %></a>
          <span class="time" title="<%= c.created_at.to_s :db %>"><%= to_pretty c.created_at %></span>
        </div>
        <div class="cmt-body-content"><%=c.content%></div>
        <div class="cmt-footer">
          <a class="post-reply" href="javascript:void(0);"><span class="icon icon-reply"></span>回复</a>&nbsp;&nbsp;<a class="post-likes" href="javascript:void(0);"><span class="icon icon-like"></span>顶</a>
        </div>
      </div>
    </li>
<% end %>

<li style="border-top-width: none" id="cmts_pager">
  <% if @comment.nil? %>
  <%= cmt_pager @comments %>
  <% end %>
</li>
