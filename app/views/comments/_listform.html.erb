<% if @query_param[:topic] %>
    <%= render 'comments/ajax_topic' %>
<% else %>
    <%= render 'comments/ajax' %>
<% end %>

<% content_for:script do %>
    <script type="text/javascript">
        readyScript.loadcmt_and_form=function(){
            loadComments('<%=@query_param.to_param %>');
            bindCmtForm('<%=@query_param.to_param %>');
            <% if @query_param[:review] %>
            $.fn.raty.defaults.path = '/plugins/raty-2.5.2/lib/img/';
            $('#starbox').raty({ score:3,scoreName:'comment[userful_num]',hints: ['很差', '差', '一般', '很好', '非常好']});
            <% end %>
        }
    </script>
<% end %>
