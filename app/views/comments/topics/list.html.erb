<% @comments=[@comment] if @comment %>
<% @comments.each do |c| %>
    <table style="border:1px solid #eee;width:100%">

      <tr>
        <td style="vertical-align:top;width:100px;background:#f9f9f9;padding:0 10px;border-right:1px solid #eee">
          <div class="infos" style="color:#999;font-size:12px;border-bottom:1px dashed #eee;padding:7px 0">
            <a href="<%= u_path c.user_id %>"><%= c.user.username %></a>
          </div>
          <br>
          <img src="/avatar/up.jpeg" alt="zhaojiangang_">

        </td>
        <td style="vertical-align:top;padding:0 10px;">
          <div class="infos" style="color:#999;font-size:12px;border-bottom:1px dashed #eee;padding:7px 0">
            <span style="color:#f60;font-weight:bold">楼主</span> 发表于 <%= c.created_at.to_s(:db) %>
          </div>
          <div style="line-height:1.7em;font-size:14px;padding:15px 0 100px 0;">
            <%= raw c.content %>
          </div>
        </td>
      </tr>
    </table>
<% end %>


<% if @comments.blank? %>
    <div style="color:#999">暂时还没有评论</div>
<% end %>

<% if @comment.nil? %>
    <div style="border-top-width: none" id="cmts_pager">
      <%= cmt_pager @comments %>
    </div>
<% end %>

