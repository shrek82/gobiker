      <td class="td_id_select"><input type="checkbox" name="id" value="<%= admin_option.id %>"></td>
                <td><%= admin_option.name %></td>
                <td><%= admin_option.key_name %></td>
                <td><%= admin_option.value %></td>
            <td class="td_id_select"> <input type="checkbox" name=""></td>
      <td>
        <%= link_to 'Show', admin_option %>
      <%= link_to 'Edit', edit_admin_option_path(admin_option) %>
      <%= link_to 'Destroy', admin_option, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>

