<% content_for:script do %>
    <script type="text/javascript">
        var ueditor_options = {};
        <%
        unless options.class=="nilClass"
           options.each do |key,value|
        %>
        ueditor_options.<%= key %> =<%=raw value %>;
        <%
           end
        end
        %>
        //实例化编辑器
        window.ueditor = UE.getEditor('<%=id %>', ueditor_options);
    </script>
<% end %>
