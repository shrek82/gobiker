<!doctype html>
<html>
<head>
  <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
  <meta charset="utf-8">
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
  <!-- Use title if it's in the page YAML frontmatter -->
  <title>Core Admin Theme</title>
  <link rel="stylesheet" href="/static/css/bootstrap.css"/>
  <link rel="stylesheet" href="/static/css/todc-bootstrap.css"/>
  <link href="/static/core-admin/stylesheets/application.css" media="screen" rel="stylesheet" type="text/css"/>
  <link rel="stylesheet" href="/static/core-admin/stylesheets/additional.css"/>
  <link rel="stylesheet" href="/static/core-admin/stylesheets/font-awesome.css"/>
  <script src="http://todc.github.io/todc-bootstrap/assets/js/jquery.js"></script>
</head>

<body>

<div class="navbar navbar-top navbar-inverse">
  <%= render 'admin/global/header' %>
</div>
<div class="sidebar-background">
  <div class="primary-sidebar-background"></div>
</div>

<div class="primary-sidebar">

  <%= render 'admin/global/sidebar' %>

</div>
<div class="main-content">
  <%= yield %>
</div>

<script src="http://todc.github.io/todc-bootstrap/assets/js/bootstrap-dropdown.js"></script>

</body>
</html>