    //搜索下拉框
    jQuery(function ($) {
        var ipt = jQuery("#bbs_tabsearch_ipt"); //input文本框
        var lay = jQuery("#bbs_tabsearch_lay"); //layer下拉菜单
        var handle = true; //焦点开关
        var defval = ""; //input默认值
        var licur = -1; //li默认开始值
        var sc_query_result_arr = [];//查询缓存数组
        var sc_TID = 0;//查询时间定义

        ipt.on("focus", function () {
            var val = jQuery(this).val();
            if (val != "" && typeof sc_query_result_arr[val] != "undefined") {
                lay.html(sc_query_result_arr[val]).show();
                licur = -1;
            }
        });
        ipt.on("blur", function () {
            if (handle) {
                lay.hide();
            }
        });
        ipt.keydown(function (event) {
            if (event.keyCode == "38" || event.keyCode == "40") {
                event.preventDefault();
            }
        });
        ipt.keyup(function (event) {
            var key = event.keyCode;
            var val = jQuery(this).val();
            if (val != "") {
                if (val != defval) {
                    clearTimeout(sc_TID);
                    sc_TID = setTimeout(function () {
                        if (typeof sc_query_result_arr[val] == "undefined") {
                            jQuery.get("http://bbs.qyer.com/qyerapi.php", {action: "forumsearch", wd: val}, function (data) {
                                sc_query_result_arr[val] = data;
                                lay.html(data).show();
                                licur = -1;
                            });
                        } else {
                            lay.html(sc_query_result_arr[val]).show();
                            licur = -1;
                        }

                    }, 200);

                }
                else if (key == 38) {
                    licur--;
                    if (licur < 0) {
                        licur = 0;
                    }

                    lay.find("a").removeClass("current").eq(licur).addClass("current");
                }
                else if (key == 40) {
                    licur++;
                    if (licur >= 4) {
                        licur = 3;
                    }

                    lay.find("a").removeClass("current").eq(licur).addClass("current");
                }
                else if (key == 13) {

                    if (licur >= 0) {
                        var rul = lay.find("a").eq(licur).attr("href");
                        window.location.href = rul;
                        return false;
                    }
                    else {
//window.location.href = "#";
                        return false;
                    }
                }
            }
            else {
                lay.hide();
            }
            defval = val; //把默认值改为当前值
        });
        lay.hover(function () {
            handle = false;
        }, function () {
            handle = true;
        });
    });

