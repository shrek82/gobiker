            if (typeof localStorage.history_read_threads !== "undefined") {
                history_read_threads = jQuery.evalJSON(localStorage.history_read_threads);
                jQuery.each(history_read_threads, function (k, v) {
                    if (typeof v !== "undefined" && v.tid != tid) {
                        new_history_read_threads.push(v);
                    }

                });
            }

            new_history_read_threads.splice(5);
            window.localStorage.setItem('history_read_threads', jQuery.toJSON(new_history_read_threads));
