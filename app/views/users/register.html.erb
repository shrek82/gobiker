<% content_for:head do %>
    <link rel="stylesheet" href="/css/login/global.css" />
    <link rel="stylesheet" href="/css/login/login2.css" />
    <script language="javascript" src="/js/login/login2.js" ></script >
    <script language="javascript" src="/js/user/password.js" ></script >
    <style type="text/css" >
        html, body {
            width: 100%;
            height: 100%;
        }

        body {
            min-height: 560px;
        }
    </style >
<% end %>
<% @title='账号登陆' %>
<div class="reg_bg" >
  <div class="reg_bg_img" >
    <img src="/images/login/background_1280_850.jpg" alt="" />

    <div class="reg_bg_idiv" ></div >
  </div >
</div >
<!--注册内容 -->
<div class="reg_cnt" >
  <div class="reg_layout" >
    <!--标题提示 -->
    <div class="reg_tips" ></div >
    <div class="reg_margin" id="content_reg_email" >
      <!--邮箱验证 -->
      <% if @act && @code && flash[:success]%>
          <%= render 'verifyregister' %>
      <% else %>
          <%= render 'reg_input_mail' %>
      <% end %>
    </div >
  </div >
</div >

<script type="text/javascript" src="/js/login/login.js" ></script >
<script language="javascript" >
    spam_text_filter();
    setTimeout('loadjscssfile("/js/beforelogin.js","js")', 1000);
</script >
<script src="/js/feedback.js" type="text/javascript" ></script >
<script src="/js/planner-clipboard.js?v1" ></script >