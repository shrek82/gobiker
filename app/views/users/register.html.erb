<% content_for:head do %>
    <link rel="stylesheet" href="/static/css/login/login2.css"/>
    <script language="javascript" src="/static/js/login/login2.js"></script>
    <script language="javascript" src="/static/js/user/password.js"></script>
    <style type="text/css">
        html, body {
            width: 100%;
            height: 100%;
        }
        body {
            min-height: 560px;
        }
    </style>
<% end %>

<div class="reg_bg">
  <div class="reg_bg_img">
    <img src="/static/images/login/background_1280_850.jpg" alt=""/>
    <div class="reg_bg_idiv"></div>
  </div>
</div>
<!--注册内容 -->
<div class="reg_cnt">
  <div class="reg_layout">
    <!--标题提示 -->
    <div class="reg_tips"></div>
    <div class="reg_margin" id="content_reg_email">
      <!--验证失败提示 -->
      <!--注册内容 -->
      <form id="reg_form">
        <div class="reg_main">
          <div class="clearfix"><strong class="fl f16 fontYaHei fb cGray">使用以下帐号直接登录</strong></div>
          <div class="tc mt15">
            <a href="javascript:void(0);" onfocus="this.blur();" class="weibo_btn _jsweibologin" url="http%3A%2F%2Fwww.qyer.com%2F">微博登录</a>
            <a href="javascript:void(0);" onfocus="this.blur();" class="qq_btn _jsqqlogin" url="http%3A%2F%2Fwww.qyer.com%2F">QQ登录</a>
          </div>
          <div class="tc mt20">
            <img src="/static/media/huo_icon.png" width="400" height="16" alt=""/></div>
          <div class="clearfix mt15"><strong class="fl f16 fontYaHei fb cGray">注册穷游帐号</strong><span class="fr cGray">已有帐号？<a href="/users/login/">登录</a></span>
          </div>
          <div class="clearfix mt15 reg_input">
            <div class="input_div">
              <input type="text" value="" autocomplete="off" class="ui_input fl f14" id="reg_email" name="email" maxlength="40" placeholder="输入邮箱，用于登录和找回密码"/>
              <span class="i_zt"></span>
              <span class="i_tips"></span>
            </div>
          </div>
          <input type="hidden" name="refer" id="reg_refer" value="http%3A%2F%2Fwww.qyer.com%2F"/>

          <div class="clearfix mt10 cGray reg_checkbox">
            <label><input type="checkbox" checked="checked" id="reg_checkbox_agree"/>我同意接受穷游网
              <a target="_blank" href="/pages/member.html">会员条款</a> 和
              <a target="_blank" href="/pages/exemption.html">免责声明</a></label></div>
          <div class="tc mt20"><input type="button" id="reg_submit" class="ui_btn_big fontYaHei" value="立即注册"/></div>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="/static/js/login/login.js"></script>
<script language="javascript">
    spam_text_filter();
    setTimeout('loadjscssfile("/static/js/beforelogin.js","js")', 1000);
</script>
<script src="/static/js/feedback.js" type="text/javascript"></script>
<script src="/static/js/planner-clipboard.js?v1"></script>